# Flash USDT Sender Bot Configuration
# Copy this file to .env and fill in your values

# ==============================================
# BOT CONFIGURATION
# ==============================================

# Your bot token (required)
BOT_TOKEN=your_bot_token_here

# Bot name (optional)
BOT_NAME=Flash USDT Sender Bot

# ==============================================
# API CONFIGURATION
# ==============================================

# API endpoint URL
API_URL=https://api.flashusdtsender.xyz

# API authentication key
API_KEY=your_api_key_here

# API timeout in milliseconds
API_TIMEOUT=30000

# ==============================================
# DATABASE CONFIGURATION (if needed)
# ==============================================

# Database connection URL
DATABASE_URL=your_database_url_here

# Database pool size
DB_POOL_SIZE=10

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/bot.log

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================

# Environment (development, production, testing)
NODE_ENV=production

# Server port (if applicable)
PORT=3000

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================

# Telegram notification bot token
NOTIFICATION_BOT_TOKEN=your_notification_bot_token

# Telegram chat ID for notifications
NOTIFICATION_CHAT_ID=your_chat_id

# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# ==============================================
# ADVANCED CONFIGURATION
# ==============================================

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Cache configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Webhook URL (if applicable)
WEBHOOK_URL=https://your-domain.com/webhook

# ==============================================
# FLASH USDT SENDER SPECIFIC
# ==============================================

# Flash USDT configuration
FLASH_USDT_ENABLED=true
FLASH_USDT_AMOUNT=100
FLASH_USDT_RECIPIENT=recipient_address_here

# Network configuration
NETWORK=mainnet
RPC_URL=https://your-rpc-url.com

# Gas configuration
GAS_LIMIT=21000
GAS_PRICE=20

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Enable monitoring
MONITORING_ENABLED=true

# Analytics tracking ID
ANALYTICS_ID=your_analytics_id

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=60
